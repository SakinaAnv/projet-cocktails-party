{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block content %}
    <center>
        <div class="d-flex align-items-center justify-content-center vw-100 vh-100">
            <div class="container">
                <section style="width: 300px; max-width: 100%; margin: 50px auto;">
                    {{ form_start(registrationForm, {'attr': {'class': 'row'}}) }}
                    <div class="form-container">
                        <form method="post" action="index.php?controle=utilisateur&action=inscription">
                            <h2 class="text-center"><strong>Créer un compte</strong></h2>
                            <br><br>
                            {{ form_widget(registrationForm.email, {'attr': {'placeholder': 'Adresse email'}}) }}
                            <span class="error">{{ form_errors(registrationForm.email) }}</span>
                            <br><br>
                            {{ form_widget(registrationForm.username, {'attr': {'placeholder': 'Nom d\'utilisateur'}}) }}
                            <span class="error">{{ form_errors(registrationForm.username) }}</span>
                            <br><br>
                            {{ form_widget(registrationForm.plainPassword, {'attr': {'placeholder': 'Mot de passe'}}) }}
                            <span class="error">{{ form_errors(registrationForm.plainPassword) }}</span>
                            <br><br>
                            <div class="form-group mb-3"><button class="btn btn-primary d-block w-100" id="submitButton" type="submit">Créer un compte</button></div>
                            <a class="already" href="/login">Déjà un compte ? Se connecter</a>
                            {{ form_end(registrationForm) }}
                        </form>
                    </div>
                </section>
            </div>
        </div>
    </center>
{% endblock %}