                                <nav class="sb-sidenav-menu-nested nav">
                                    <a class="nav-link" href="login.html">Liste des cocktails</a>
                                    <a class="nav-link" href="register.html">Ajout de cocktail</a>
                                </nav>
                            </div>
                        </nav>
                    </div>
                </div>
            </div>
            <div class="sb-sidenav-footer">
                <div class="small">Logged in as:</div>
                Start Bootstrap
            </div>c
        </nav>
    </div>
    <div id="layoutSidenav_content">
        <main>
            <div class="container-fluid px-4">
                <h1 class="mt-4">
                    {% block PageTitle %}
                        Admin
                    {% endblock %}</h1>
