{% extends 'base.html.twig' %}

{% block title %}Votre panier{% endblock %}

{% block content %}
    <div class="row">
        <div class="col">
            <p></p>
            <h2 class="text-center">Choisissez votre cocktails</h2>
        </div>
    </div>
    <section class="bg-light p-3">
        <h1>Votre panier</h1>
    </section>

    <table class="table">
        <thead>
        <tr>
            <th>Cocktail</th>
            <th>Prix</th>
            <th>Quantité</th>
            <th>Total</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for element in dataPanier %}
            <tr>
                <td>{{ element.produit.name }}</td>
                <td class="text-end">{{ element.produit.price }} €</td>
                <td>{{ element.quantite }}</td>
                <td class="text-end">{{ element.quantite * element.produit.price }} €</td>
                <td>
                    <a href="{{path("cart_add", {id: element.produit.id})}}" class="btn btn-success"> +1
                        <i class="bi bi-cart-plus"></i>
                    </a>
                    <a href="{{path("cart_remove", {id: element.produit.id})}}" class="btn btn-danger"> -1
                        <i class="bi bi-cart-dash"></i>
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5" class="text-center">Panier vide</td>
            </tr>
        {% endfor %}
        </tbody>
        <tfoot>
        <tr>
            <td colspan="3">Total</td>
            <td class="text-end">{{ total }} €</td>
            <td>
                <a href="{{path("cart_delete_all")}}" class="btn btn-warning"> Acheter
                    <i class="bi bi-cart-x"></i>
                </a>
            </td>
        </tr>
        </tfoot>
    </table>

{% endblock %}